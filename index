/* â”€â”€ GOLD PARTICLES â”€â”€ */
const canvas = document.getElementById('particles');
const ctx    = canvas.getContext('2d');
let W, H, pts = [];

function resize(){ W = canvas.width = innerWidth; H = canvas.height = innerHeight; }
resize(); window.addEventListener('resize', resize);

function mkPt(){
  return {
    x: Math.random()*W, y: Math.random()*H,
    r: .3 + Math.random()*1.3,
    vx:(Math.random()-.5)*.22, vy:-.08-Math.random()*.22,
    a: .1+Math.random()*.5,
    type: Math.random()>.7 ? 'diamond' : 'circle'
  };
}
for(let i=0;i<90;i++) pts.push(mkPt());

(function draw(){
  ctx.clearRect(0,0,W,H);
  pts.forEach((p,i)=>{
    ctx.save(); ctx.globalAlpha = p.a;
    if(p.type==='diamond'){
      ctx.translate(p.x,p.y); ctx.rotate(Math.PI/4);
      ctx.fillStyle=`rgba(201,168,76,${p.a})`;
      ctx.fillRect(-p.r,-p.r,p.r*2,p.r*2);
    } else {
      ctx.beginPath(); ctx.arc(p.x,p.y,p.r,0,Math.PI*2);
      ctx.fillStyle=`rgba(240,216,152,${p.a})`; ctx.fill();
    }
    ctx.restore();
    p.x+=p.vx; p.y+=p.vy;
    if(p.y<-4) pts[i]={...mkPt(),y:H+4};
  });
  requestAnimationFrame(draw);
})();

/* â”€â”€ SCROLL REVEALS â”€â”€ */
const io = new IntersectionObserver(entries=>{
  entries.forEach(e=>{ if(e.isIntersecting) e.target.classList.add('visible'); });
},{threshold:.1});
['letterWrap','quoteText','quoteAttr','askTo','askTitle','askSub'].forEach(id=>{
  const el=document.getElementById(id); if(el) io.observe(el);
});

/* â”€â”€ RUNAWAY NO â”€â”€ */
let noCount=0;
const yesLabels=['Yes, always ğŸ’›','Of course yes!','YES Lara!! ğŸ’›','OBVIOUSLY YES!!','YESYESYES!! ğŸ’›','Just say YES!! ğŸ¥º','CLICK HERE LARA!! ğŸ’›'];
const noBtn=document.getElementById('noBtn');
const askSec=document.getElementById('ask');
noBtn.style.position='absolute'; noBtn.style.left='64%'; noBtn.style.top='55%';

function dodge(e){
  e.preventDefault();
  const sr=askSec.getBoundingClientRect();
  const bw=noBtn.offsetWidth, bh=noBtn.offsetHeight;
  const maxX=sr.width-bw-16, maxY=sr.height-bh-16;
  const cx=(e.touches?e.touches[0].clientX:e.clientX)-sr.left;
  const cy=(e.touches?e.touches[0].clientY:e.clientY)-sr.top;
  const bx=parseFloat(noBtn.style.left)+bw/2;
  const by=parseFloat(noBtn.style.top)+bh/2;
  const angle=Math.atan2(by-cy,bx-cx);
  let nx=bx+Math.cos(angle)*(190+Math.random()*120)-bw/2;
  let ny=by+Math.sin(angle)*(190+Math.random()*120)-bh/2;
  nx=Math.max(8,Math.min(nx,maxX)); ny=Math.max(8,Math.min(ny,maxY));
  const yr=document.getElementById('yesBtn').getBoundingClientRect();
  const ycx=yr.left-sr.left+yr.width/2, ycy=yr.top-sr.top+yr.height/2;
  const safe=yr.width*1.2+bw/2;
  const d=Math.sqrt((nx+bw/2-ycx)**2+(ny+bh/2-ycy)**2);
  if(d<safe){
    const a2=Math.atan2(ny+bh/2-ycy,nx+bw/2-ycx);
    nx=Math.max(8,Math.min(ycx+Math.cos(a2)*(safe+20)-bw/2,maxX));
    ny=Math.max(8,Math.min(ycy+Math.sin(a2)*(safe+20)-bh/2,maxY));
  }
  noBtn.style.transition='left .22s cubic-bezier(.68,-0.55,.27,1.55),top .22s cubic-bezier(.68,-0.55,.27,1.55)';
  noBtn.style.left=nx+'px'; noBtn.style.top=ny+'px';
  noCount++;
  const yb=document.getElementById('yesBtn');
  yb.style.transform=`scale(${Math.min(1+noCount*.13,2.4)})`;
  yb.style.transition='transform .3s cubic-bezier(.68,-0.55,.27,1.55),box-shadow .3s';
  yb.style.boxShadow=`0 ${8+noCount*4}px ${28+noCount*8}px rgba(201,168,76,${Math.min(.35+noCount*.08,.9)})`;
  yb.textContent=yesLabels[Math.min(noCount,yesLabels.length-1)];
  if(noCount>=5) noBtn.style.opacity=String(Math.max(0.05,1-noCount*.12));
}
noBtn.addEventListener('click',dodge);
noBtn.addEventListener('touchstart',dodge);

/* â”€â”€ YES â”€â”€ */
function sayYes(){
  document.getElementById('askContent').style.display='none';
  document.getElementById('success').style.display='flex';
  burst();
}
function burst(){
  const emojis=['ğŸ’›','âœ¨','âœ¿','ğŸ’«','â­','ğŸŒŸ','âœ¦','ğŸ’•','ğŸ’›','ğŸŒ¸'];
  for(let i=0;i<70;i++){
    setTimeout(()=>{
      const p=document.createElement('div'); p.className='burst';
      p.textContent=emojis[Math.floor(Math.random()*emojis.length)];
      const angle=Math.random()*360, dist=140+Math.random()*480;
      const rad=angle*Math.PI/180, dur=1.4+Math.random()*1.8;
      p.style.cssText=`left:50vw;top:50vh;font-size:${.8+Math.random()*1.8}rem;--bx:${(Math.cos(rad)*dist).toFixed(1)}px;--by:${(Math.sin(rad)*dist).toFixed(1)}px;--br:${(Math.random()*360).toFixed(1)}deg;animation-duration:${dur}s;`;
      document.body.appendChild(p);
      setTimeout(()=>p.remove(),dur*1000+200);
    },i*42);
  }
}
</script>
